{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "run",
            "type": "shell",
            "command": "zig build run"
        },
        {
            "label": "build",
            "type": "shell",
            "command": "zig build",
            "problemMatcher": [
                "$zig"
            ],
            "group": {
                "kind": "build"
            },
            "isBackground": true
        },
        {
            "label": "build ex",
            "type": "process",
            "command": "${command:zig-language-extras.buildWorkspace}",
            "problemMatcher": [
                "$zig"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "isBackground": true
        },
        {
            "label": "test",
            "type": "shell",
            "command": "zig build test",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": [
                "$zig"
            ],
            "isBackground": true
        }
    ]
}